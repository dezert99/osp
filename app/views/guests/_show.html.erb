<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <h2>
        <span class="guest-avatar badge large"><%= guest.initials %></span>
        <%= guest.full_name %>
      </h2>
      <h5>Email</h5>
      <h5>Phone</h5>
    </div>

    <div class="col-sm-6">
      <h3>Attendee Type</h3>
      <h3>Seat</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h3>Travel Notes</h3>
    </div>

    <div class="col-sm-6">
      <h3>Hotel Notes</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h3>Dietary Notes</h3>
    </div>

    <div class="col-sm-6">
      <h3>General Notes</h3>
    </div>
  </div>

  <div>
    <%= link_to "Edit", edit_guest_path(guest) %>
  </div>
  <div>
    <%= link_to "Delete Guest", guest_path(guest),
        method: :delete,
        data: {confirm: 'Are you sure?'}
    %>
  </div>
</div>
